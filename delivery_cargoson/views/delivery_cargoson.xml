<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_delivery_carrier_form_with_provider_cargoson" model="ir.ui.view">
        <field name="name">delivery.carrier.form.provider.cargoson</field>
        <field name="model">delivery.carrier</field>
        <field name="inherit_id" ref="delivery.view_delivery_carrier_form"/>
        <field name="arch" type="xml">
            <xpath expr="//page[@name='destination']" position='before'>
                <page
                    string="Cargoson Configuration"
                    name="cargoson_configuration"
                    attrs="{'invisible': [('delivery_type', '!=', 'cargoson')]}">
                    <group>
                        <group>
                            <field name="cargoson_api_url" attrs="{'required': [('delivery_type', '=', 'cargoson')]}"/>
                            <field name="cargoson_api_key" attrs="{'required': [('delivery_type', '=', 'cargoson')]}"/>
                        </group>
                        <group>
                            <field name="cargoson_test_api_url" attrs="{'required': [('delivery_type', '=', 'cargoson')]}"/>
                            <field name="cargoson_test_api_key" attrs="{'required': [('delivery_type', '=', 'cargoson')]}"/>
                        </group>
                        <group>
                            <field name="cargoson_parcel_machine_country_ids" attrs="{'required': [('delivery_type', '=', 'cargoson')]}" />
                        </group>
                    </group>
                </page>
            </xpath>

            <xpath expr="//button[@name='toggle_debug']" position="before">
                <button
                    name="action_cargoson_queue"
                    attrs="{'invisible': [('delivery_type', '!=', 'cargoson')]}"
                    class="oe_stat_button"
                    type="object" icon="fa-exchange">
                    <div class="o_stat_info o_field_widget">
                        <span class="text-success">Queue</span>
                    </div>
                </button>
<!--                <button-->
<!--                    name="action_cargoson_event_log"-->
<!--                    attrs="{'invisible': [('delivery_type', '!=', 'cargoson')]}"-->
<!--                    class="oe_stat_button"-->
<!--                    type="object" icon="fa-history">-->
<!--                    <div class="o_stat_info o_field_widget">-->
<!--                        <span class="text-success">Event log</span>-->
<!--                    </div>-->
<!--                </button>-->
            </xpath>
        </field>
    </record>

</odoo>
