<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_cargoson_queue_task_tree" model="ir.ui.view">
            <field name="name">cargoson.queue.task.tree</field>
            <field name="model">cargoson.queue.task</field>
            <field name="arch" type="xml">
                <tree
                    string="Cargoson Queue"
                    decoration-info="state == 'pending'"
                    decoration-warning="state == 'in_progress'"
                    decoration-danger="state == 'error'"
                    decoration-success="state == 'completed'"
                    create="0" edit="0" delete="0">
                    <field name="create_date"/>
                    <field name="state"/>
                    <field name="name"/>
                    <field name="num_tries"/>
                    <field name="res_name"/>
                    <field name="method"/>
                    <field name="res_id"/>
                </tree>
            </field>
        </record>
    </data>
</odoo>
