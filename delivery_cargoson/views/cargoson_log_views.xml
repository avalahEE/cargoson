<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_cargoson_log_tree" model="ir.ui.view">
            <field name="name">cargoson.log.tree</field>
            <field name="model">cargoson.log</field>
            <field name="arch" type="xml">
                <tree
                    string="Cargoson Event Log"
                    decoration-danger="status == 'error'"
                    decoration-warning="status == 'warning'"
                    decoration-success="status == 'success'"
                    create="0" edit="0" delete="0">
                    <field name="create_date"/>
                    <field name="delivery_carrier_id"/>
                    <field name="status"/>
                    <field name="type"/>
                    <field name="message"/>
                </tree>
            </field>
        </record>
    </data>
</odoo>
