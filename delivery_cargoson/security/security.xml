<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <record model="ir.module.category" id="module_category_avalah_cargoson">
            <field name="name">Cargoson</field>
        </record>

        <record model="res.groups" id="group_cargoson_user">
            <field name="name">User</field>
            <field name="users" eval="[(4, ref('base.user_root'))]"/>
            <field name="category_id" ref="module_category_avalah_cargoson"/>
        </record>

        <record model="res.groups" id="group_cargoson_admin">
            <field name="name">Admin</field>
            <field name="users" eval="[(4, ref('base.user_root')), (4, ref('base.user_admin'))]"/>
            <field name="implied_ids" eval="[(4, ref('group_cargoson_user'))]"/>
            <field name="category_id" ref="module_category_avalah_cargoson"/>
        </record>
    </data>
</odoo>
